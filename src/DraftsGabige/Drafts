// handler  for cards button ***************************1
const showerDouble = (e) => {
  // replacing text on a button
  e.target.textContent = "Nyams";
  // change css +++++++++++++++++++++++++++++++++++++++++++
  e.target.style.color = "white";
};

const showerMono = (e) => {
  e.target.style.color = "red";
  e.target.textContent = "click for eat";

  console.log("mono666");
};
